<%= form_with url: "/users/#{@post.author_id}/posts/#{@post.id}/comments", scope: :comment do |form| %>
    <div class="add-comment-c">
        <%= form.text_area :text, placeholder: "Add your comment...", rows: 14, required: true, class: "comment-text-c" %>
        <%= form.submit "Comment", class: "submit-btn" %>
    </div>
<% end %>